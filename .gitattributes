# Handle line endings automatically
* text=auto

# Always use LF for these files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.css text eol=lf
*.html text eol=lf
*.md text eol=lf
*.py text eol=lf

# Windows batch files keep CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
# Shell scripts keep LF
*.sh text eol=lf
*.zsh text eol=lf
*.bash text eol=lf
# Configuration files keep LF
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.env text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.xml text eol=lf
# Ignore binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
